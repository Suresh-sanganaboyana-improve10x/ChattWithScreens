<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/templates_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Templates"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/messages_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/series_screen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Series Screen"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/advance_series_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advance Series"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/movies_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/grocery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocery"
        android:textAllCaps="false"
        android:textSize="16sp" />
</LinearLayout>